/**
 * Determine if the user can change the site owner.
 */
function cp_user_site_owner_access() {
  if (!module_exists('vsite') || !$vsite = vsite_get_vsite()) {
    return FALSE;
  }

  global $user;

  return $user->uid == $vsite->group->uid || user_access('administer group');
}

/**
