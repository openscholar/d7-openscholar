/**
 * Submit handler; maybe grants a role, then redirects user back to "cp/users".
 */
function cp_user_og_ui_add_users_submit(&$form, &$form_state) {
  global $user;
  $state = $form_state['values']['state'];
  $account = user_load_by_name($form_state['values']['name']);

  if ($state) {
    // Associate the user with the group.
    og_group('node', $form_state['values']['gid'], array('entity' => $account->uid));

    // Add user's role
    og_ui_edit_membership_submit($form, $form_state);

    $vsite = vsite_get_vsite();
     // Loading logged in user's user object for full name.
     $account_modifier = user_load($user->uid);
     $account_modifier_full_name = $account_modifier->field_first_name[LANGUAGE_NONE][0]['value'] . ' ' . $account_modifier->field_last_name[LANGUAGE_NONE][0]['value'];
     global $base_url;
     $purl_base_domain = $base_url;

     // Checking if this vsite has a custom domain or not.
     $custom_domain = db_select('purl', 'p')
       ->fields('p', array('value'))
       ->condition('provider', 'vsite_domain', '=')
       ->condition('id', $vsite->group->nid, '=')
       ->execute()
       ->fetchField();

     // Setting up email parameters.
     $to = $account->mail;
     $from = variable_get('site_mail', ini_get('sendmail_from'));
     $params['!user-role'] = _cp_user_list_roles('rids-human', NULL, $form['gid']['#value'])[$form_state['input']['roles']];
     $params['!account-modifier'] = !empty($account_modifier_full_name) ? $account_modifier_full_name : $account_modifier->name;
     $params['!site-url'] = url('', array(
       'purl' => array(
         'id' => $vsite->id,
         'provider' => $custom_domain ? 'vsite_domain' : 'spaces_og',
       ),
       'absolute' => true,
     ));
     $params['!account-modifier-email'] = $account_modifier->mail;
     $params['!user-firstname'] = $account->field_first_name[LANGUAGE_NONE][0]['value'];
     $params['!sitewide-name'] = variable_get('site_name', 'OpenScholar');
     $params['headers']['Cc'] = $account_modifier->mail;
     drupal_mail('cp_user', 'os_user_add_to_group', $to, LANGUAGE_NONE, $params, $from);
   }
  $form_state['redirect'] = 'cp/users';
}

/**
 * Implements hook_mail().
 */
function cp_user_mail($key, &$message, $params){
  switch ($key) {
    case 'os_user_add_to_group' :
      $message['subject'] = t("You have been added as a member to the !site-url website", $params);
      $message['body'] = array();
      $message['body'][] = t("Hi !user-firstname,", $params);
      $message['body'][] = t("!account-modifier has added you as a member with the role of !user-role to the website !site-url. If you feel this was in error or have any questions, please contact them at !account-modifier-email", $params);
      $message['body'][] = t("Don't forget to bookmark the site and save this email for future reference.");
      $message['body'][] = t("Here are some handy links for you:");
      $links = array();
      if(variable_get('training_signup_url')) {
        $links[] = " * Sign up for training: " . variable_get('training_signup_url') . "\n";
      }
      $links[] = " * OpenScholar documentation: https://help.theopenscholar.com\n";
      if(variable_get('contact_url')) {
        $links[] = " * Need help with your project? " . variable_get('contact_url');
      }
      $message['body'][] = implode("", $links);
      $message['body'][] = t("Sincerely,\n!sitewide-name", $params);
      $message['headers'] += $params['headers'];
      break;

    case 'os_user_delete_from_group' :
      $message['subject'] = t("You have been removed from the !site-url website", $params);
      $message['body'] = array();
      $message['body'][] = t("Hi !user-firstname,", $params);
      $message['body'][] = t("!account-modifier has removed you as a member with the role of !user-role from the website !site-url. If you feel this was in error or have any questions, please contact them at !account-modifier-email", $params);
      $message['body'][] = t("Sincerely,\n!sitewide-name", $params);
      $message['headers'] += $params['headers'];
      break;

    case 'os_user_role_change' :
      $message['subject'] = t("Your role on the !site-url website has changed", $params);
      $message['body'] = array();
      $message['body'][] = t("Hi !user-firstname,", $params);
      $message['body'][] = t("!account-modifier has changed your role to !user-role on the website !site-url. If you feel this was in error or have any questions, please contact them at !account-modifier-email", $params);
      $message['body'][] = t("Sincerely,\n!sitewide-name", $params);
      $message['headers'] += $params['headers'];
      break;
  }
}

